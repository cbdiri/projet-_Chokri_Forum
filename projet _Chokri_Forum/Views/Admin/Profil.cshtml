@model projet__Chokri_Forum.Models.Users

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Welcome to User Profile</h1>
<html>
<head>
    <style>
        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

    </style>
</head>
<body>
    <form method="post" enctype="multipart/form-data">
        <table class="table">
            <tr>
                <th>UserID</th>
                <td>@Html.DisplayFor(model => model.id)</td>
                <td></td>
            </tr>
            <tr>
                <th>Pseudonyme</th>
                <td>@Html.DisplayFor(model => model.pseudonyme)</td>
                <td><input type="text" name="n1" value="@Model.pseudonyme" required /></td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>@Html.DisplayFor(model => model.motdepasse)</td>
                <td><input type="text" name="n2" value="@Model.motdepasse" required /></td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Html.DisplayFor(model => model.email)</td>
                <td><input type="email" name="n3" value="@Model.email" required /></td>
            </tr>
            <tr>
                <th>Inscrit</th>
                <td>@Html.DisplayFor(model => model.inscrit)</td>
                <td></td>
            </tr>
            <tr>
                <th>Valide</th>
                <td>@Html.DisplayFor(model => model.valide)</td>
                <td></td>
            </tr>
            <tr>
                <th> Avatar </th>
                <td><img src="@Model.cheminavatar" alt="Photo de profil" style="max-width: 100px; max-height: 100px;  border-radius: 50%;" /> </td>
                <td> <input type="file" id="file" name="file" required></td>
                <td></td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>@Html.DisplayFor(model => model.signature)</td>
                <td></td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>@Html.DisplayFor(model => model.actif)</td>
                <td></td>
            </tr>
            <tr>
                <th>Admin</th>
                <td>@Html.DisplayFor(model => model.admin)</td>
                <td></td>
            </tr>
        </table>
        <input type="submit" value="update" />
    </form>
</body>
</html>