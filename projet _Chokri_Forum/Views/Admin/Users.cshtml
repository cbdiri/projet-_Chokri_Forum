@model IEnumerable<projet__Chokri_Forum.Models.Users>

@{
    ViewData["Title"] = "Users";
}

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pseudonyme)
            </th>
            <th>
                Avatar
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valide)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.admin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pseudonyme)
                </td>
                <td>
                    <img src="@item.cheminavatar"  style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valide)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.admin)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UsersEdit", new { id = item.id }) |
                    @Html.ActionLink("Détails", "UsersDétails", new { id = item.id }) |
                    @Html.ActionLink("Delete", "UserDelete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
