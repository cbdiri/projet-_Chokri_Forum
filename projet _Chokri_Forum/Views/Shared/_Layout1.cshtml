<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - projet _Chokri_Forum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projet_Chokri_Forum.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
            <span class="fs-4">Forum Polytech  </span>
        </a>

        <ul class="nav nav-pills">
            <li class="nav-item"><a asp-controller="Home" asp-action="Auth" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Auth" ? "active" : "")">se connecter</a></li>
            <li class="nav-item"><a asp-controller="Home" asp-action="Insc" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Insc" ? "active" : "")">S'inscrire</a></li>
            <li class="nav-item"><a asp-controller="Home" asp-action="About" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")">About</a></li>
        </ul>
    </header>

    <div class="container main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2023 - projet _Chokri_Forum - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
